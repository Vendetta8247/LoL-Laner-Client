<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_constructor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_gradient"
    tools:context="ua.com.vendetta8247.lollaner.ConstructorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/firstChampionRelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeholderPanel"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addFirstChampionButton"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/plus"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/linear_outline">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/annie_splash"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:alpha="0.20"
                android:padding="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:id="@+id/secondChampionImage"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@drawable/aatrox"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:paddingLeft="7dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Second champion"
                            android:textColor="@color/whiteMain"/>


                            </LinearLayout>
                        <TextView

                            android:paddingTop="7dp"
                            android:id="@+id/tvfullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Dark Child"
                            android:textColor="@color/whiteMain"/>
                        <TextView
                            android:paddingTop="7dp"
                            android:id="@+id/tvrole"
                            android:layout_width="wrap_content"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:text="Mage"
                            android:textColor="@color/whiteMain"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:layout_weight="1">

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableLayout

                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/table_outline_main"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TableRow
                            android:layout_width="match_parent">
                            <ImageView
                                android:padding="10dp"
                                android:layout_weight="1"
                                android:layout_width="50dp" android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/plus"
                                android:background="@drawable/table_outline_bottom"/>
                            <ImageView android:src="@drawable/plus"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_width="50dp" android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/table_outline_bottom"/>
                            <ImageView android:src="@drawable/plus"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_width="50dp" android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/table_outline_only_bottom"/>

                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent">
                            <ImageView
                                android:padding="10dp"
                                android:layout_weight="1"
                                android:layout_width="50dp" android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/plus"
                                android:background="@drawable/table_outline"/>
                            <ImageView android:src="@drawable/plus"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_width="50dp" android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/table_outline"/>
                            <ImageView android:src="@drawable/plus"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_width="50dp" android:layout_height="50dp"
                                android:adjustViewBounds="true"
                                />

                        </TableRow>

                    </TableLayout>
                    <TableLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:id="@+id/textViewAD"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="AD: "
                                android:textColor="@color/whiteMain"/>
                            <TextView
                                android:id="@+id/textViewAP"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_height="wrap_content"
                                android:text="AP: "
                                android:textColor="@color/whiteMain"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:id="@+id/textViewArmor"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Arm: "
                                android:textColor="@color/whiteMain"/>
                            <TextView
                                android:id="@+id/textViewMR"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_height="wrap_content"
                                android:text="MR: "
                                android:textColor="@color/whiteMain"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:id="@+id/textViewCrit"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Crit: "
                                android:textColor="@color/whiteMain"/>
                            <TextView
                                android:id="@+id/textViewAS"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_height="wrap_content"
                                android:text="AS: "
                                android:textColor="@color/whiteMain"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent">
                            <TextView
                                android:id="@+id/textViewCDR"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="CDR: "
                                android:textColor="@color/whiteMain"/>
                            <TextView
                                android:id="@+id/textViewMS"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="start"
                                android:layout_height="wrap_content"
                                android:text="MS: "
                                android:textColor="@color/whiteMain"/>
                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
